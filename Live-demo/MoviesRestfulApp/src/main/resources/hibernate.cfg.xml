<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="Movies">
  <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
  <property name="hibernate.connection.url">http://localhost:3306</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.default_catalog">movies</property>
  <property name="hibernate.default_schema">moviesDB</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <mapping class="movies.models.Movie"/>
 </session-factory>
</hibernate-configuration>
